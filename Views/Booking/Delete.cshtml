@model RiyaBhandari_Lab2.Models.Booking
@{
    ViewData["Title"] = "Delete Booking";
}

<section class="bg-white p-4 rounded shadow-sm">
    <h2>Delete Booking</h2>
    <p class="text-muted">Are you sure you want to delete this booking?</p>

    <dl class="row">
        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">@Model.Date.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">Time Slot</dt>
        <dd class="col-sm-9">@Model.TimeSlot</dd>

        <dt class="col-sm-3">Venue</dt>
        <dd class="col-sm-9">@Model.Venue?.Name</dd>

        <dt class="col-sm-3">Member</dt>
        <dd class="col-sm-9">@Model.Member?.FullName</dd>

        <dt class="col-sm-3">Total</dt>
        <dd class="col-sm-9">$@Model.TotalPrice</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="BookingId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-link">Cancel</a>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
 }
