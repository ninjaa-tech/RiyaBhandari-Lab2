@model IEnumerable<RiyaBhandari_Lab2.Models.Booking>

<section class="bg-white p-4 rounded shadow-sm">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Bookings</h2>
        <a asp-action="Create" class="btn btn-success">+ Create Booking</a>
    </div>

    @if (!Model.Any())
    {
        <p class="text-muted">No bookings yet.</p>
    }
    else
    {
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Venue</th>
                    <th>Member</th>
                    <th>Total</th>
                    <th class="text-end" style="width: 280px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>@b.Date.ToString("yyyy-MM-dd")</td>
                        <td>@b.TimeSlot</td>
                        <td>@b.Venue?.Name</td>
                        <td>@b.Member?.FullName</td>
                        <td>$@b.TotalPrice</td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@b.BookingId" class="btn btn-sm btn-outline-primary me-1">Details</a>
                            <a asp-action="Edit" asp-route-id="@b.BookingId" class="btn btn-sm btn-primary me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@b.BookingId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</section>
